---
import "@fontsource-variable/grandstander";
import "@fontsource-variable/inter";
import Footer from "../components/footer/Footer.astro";
import Navigation from "../components/navigation/Navigation.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    /* Add these styles to your global stylesheet, which is used across all site pages. You only need to do this once. All elements in the library derive their variables and base styles from this central sheet, simplifying site-wide edits. For instance, if you want to modify how your h2's appear across the site, you just update it once in the global styles, and the changes apply everywhere. */
    --primary: hsl(200, 100%, 36%);
    --primaryLight: hsl(200, 100%, 96%);
    --primaryDark: hsl(342, 92%, 58%);
    --secondary: hsl(63, 78%, 89%);
    --secondaryLight: #f9f871;
    --x: #9bed85;
    --y: #ab53a2;
    --z: #e39d22;
    --black: #1a1a1a;
    --bodyTextColor: #4e4b66;
    --bodyTextColorWhite: #fafbfc;
    /* 13px - 16px */
    --topperFontSize: clamp(0.8125rem, 1.6vw, 1rem);
    /* 31px - 49px */
    --headerFontSize: clamp(1.9375rem, 3.9vw, 3.0625rem);
    --bodyFontSize: clamp(1rem, 0.9443rem + 0.2548vw, 1.25rem);
    /* 60px - 100px top and bottom */
    --sectionPadding: clamp(3rem, 7.5vw, 6.25rem) 1rem;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: "Inter Variable", sans-serif;
    color: var(--black);
  }

  h1,
  h2,
  h3 {
    font-family: "Grandstander Variable", system-ui;
    /* font-family: 'Sigmar One', system-ui; */
    /* font-family: 'Righteous', system-ui; */
    /* font-family: 'Goldman', system-ui; */
  }
  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }
  .cs-topper {
    font-size: var(--topperFontSize);
    line-height: 1.2em;
    text-transform: uppercase;
    text-align: inherit;
    letter-spacing: 0.1em;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.25rem;
    display: block;
  }

  .cs-title {
    font-size: var(--headerFontSize);
    font-weight: 900;
    line-height: 1.2em;
    text-align: inherit;
    max-width: 43.75rem;
    margin: 0 0 1rem 0;
    color: var(--black);
    position: relative;
  }

  .cs-text {
    font-size: var(--bodyFontSize);
    line-height: 1.5em;
    text-align: inherit;
    width: 100%;
    max-width: 40.625rem;
    margin: 0;
    color: var(--bodyTextColor);
  }
</style>
