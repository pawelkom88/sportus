---
import "@fontsource-variable/anybody";
import "@fontsource-variable/grandstander";
import Footer from "../components/footer/Footer.astro";
import Navigation from "../components/navigation/Navigation.astro";
import Seo from "../seo/Seo.astro";
interface Props {
  title: string;
  description: string;
  image?: {
    src: string;
    alt: string;
  };
  jsonLDType?: string;
}

const { title, description, image, jsonLDType = "website" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="generator" content={Astro.generator} />
    <Seo {title} {description} url={Astro.url} {image} jsonLDType={jsonLDType} />
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --primary: hsl(200, 100%, 36%);
    --primaryLight: hsl(200, 100%, 96%);
    --primaryDark: hsl(342, 92%, 58%);
    --secondary: hsl(63, 78%, 89%);
    --secondaryLight: #f9f871;
    --x: #9bed85;
    --y: #ab53a2;
    --z: #e39d22;
    --black: #1a1a1a;
    --bodyTextColorWhite: #fafbfc;
    --white: #fff;
    /* 13px - 16px */
    --topperFontSize: clamp(0.8125rem, 1.6vw, 1rem);
    /* 31px - 49px */
    --headerFontSize: clamp(1.9375rem, 3.9vw, 3.0625rem);
    --bodyFontSize: clamp(1rem, 0.9443rem + 0.2548vw, 1.2rem);
    /* 60px - 100px top and bottom */
    --sectionPadding: clamp(3rem, 7.5vw, 6.25rem) 1rem;
    --radius: 2rem;
  }

  html {
    scroll-padding-top: 7rem;
    text-rendering: optimizeLegibility;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: "Anybody Variable", sans-serif;
    color: var(--black);
  }

  *:focus-visible {
    outline-style: dashed;
    outline-width: 4px;
    outline-color: var(--primaryDark);
    background-color: yellow;
    padding: 0.5rem;
  }
  h1,
  h2,
  h3 {
    font-family: "Grandstander Variable", system-ui;
    /* font-family: 'Sigmar One', system-ui; */
    /* font-family: 'Righteous', system-ui; */
    /* font-family: 'Goldman', system-ui; */
  }
  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }
  .cs-topper {
    font-size: var(--topperFontSize);
    line-height: 1.2em;
    text-transform: uppercase;
    text-align: inherit;
    letter-spacing: 0.1em;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.25rem;
    display: block;
  }

  .cs-title {
    font-size: var(--headerFontSize);
    font-weight: 900;
    line-height: 1.2em;
    text-align: inherit;
    max-width: 43.75rem;
    margin: 0 0 1rem 0;
    color: var(--black);
    position: relative;
  }

  .cs-text {
    font-size: var(--bodyFontSize);
    line-height: 1.5em;
    text-align: inherit;
    width: 100%;
    max-width: 40.625rem;
    margin: 0;
    text-justify: inter-word;
    text-wrap: pretty;
  }
  @keyframes rotate {
    0% {
      transform: rotate(0);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  .underline {
    text-decoration: underline;
    text-underline-offset: 0.01em;
    text-decoration-thickness: 0.01em;
    text-decoration-color: var(--primaryDark);
    text-underline-position: under;
    text-decoration-style: wavy;
  }
</style>
